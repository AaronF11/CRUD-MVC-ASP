@model List<ContactModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <a asp-action="Save" asp-controller="Main" class="save"><i class="bi bi-plus-circle"></i> Add</a>
        <hr />
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>
                        <a asp-action="Edit" asp-controller="Main" class="edit" asp-route-Id="@item.Id"><i class="bi bi-pen"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Main" class="delete" asp-route-Id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>


