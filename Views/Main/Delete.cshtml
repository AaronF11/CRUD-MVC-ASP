@model ContactModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-add">
    <div class="card-header">
        Delete contact
    </div>
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Main" method="post" class="form">
            <input asp-for="Id" type="hidden">
            <div class="alert alert-danger" role="alert">
                ¿Desea eiminar el contacto : "@Html.DisplayTextFor(m => m.Name)"?
            </div>
            <div class="buttons">
                <a asp-action="List" asp-controller="Main" class="return">Return</a>
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</div>

