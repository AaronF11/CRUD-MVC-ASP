@model ContactModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-add">
    <div class="card-header">
        Upload contact
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Main" method="post" class="form">
            <input asp-for="Id" type="hidden">
            <div class="form-group">
                <label for="name">Full name</label>
                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter full name">
            </div>
            <div class="form-group">
                <label for="phone">Phone number</label>
                <input asp-for="Phone" type="text" class="form-control" id="phone" placeholder="Enter phone number">
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter email address">
            </div>
            <div class="buttons">
                <a asp-action="List" asp-controller="Main" class="return">Return</a>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</div>

